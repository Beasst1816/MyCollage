<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainbackgroundcolor"
    tools:context=".MainActivity">

    <!-- App Logo -->
    <!--  Titel -->

    <!--tagline-->

    <!--student card-->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="29dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/collagelockerlogo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MyCollege"
        android:textColor="#FBFBFB"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.571" />

    <!-- Admin Card -->

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="Locker"
        android:textColor="#FB0909"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="205dp"
        android:layout_height="35dp"
        android:layout_marginTop="80dp"
        android:text="Your Digital College Companion"
        android:textAlignment="center"
        android:textColor="@color/mutedtext"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/studentCard"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/buttontemplate"
        android:backgroundTint="@color/cardbackground"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <ImageView
            android:id="@+id/studentIcon"
            android:layout_width="30dp"
            android:layout_height="31dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/graduationcap_icon" />

        <TextView
            android:id="@+id/studentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Student"
            android:textColor="#F8F5F5"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/studentIcon"
            app:layout_constraintTop_toTopOf="@id/studentIcon" />

        <TextView
            android:id="@+id/studentDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="Access Your Records And Documents"
            android:textColor="@color/mutedtext"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/studentTitle"
            app:layout_constraintTop_toBottomOf="@+id/studentTitle" />

        <Button
            android:id="@+id/studentLoginBtn"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/buttonshape"
            android:text="Login"
            android:textColor="@color/allforegroundtext"
            android:textColorLink="#FDFAFA"
            android:textSize="14sp"
            app:backgroundTint="@drawable/buttonsbackgroundcolor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/studentRegisterBtn"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/studentRegisterBtn"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/buttonshape"
            android:text="Register"
            android:textColor="@color/allforegroundtext"
            android:textSize="14sp"
            app:backgroundTint="@color/primarybuttons"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/studentLoginBtn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/adminCard"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttontemplate"
        android:backgroundTint="@color/cardbackground"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentCard">

        <ImageView
            android:id="@+id/adminIcon"
            android:layout_width="30dp"
            android:layout_height="31dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/usercheck_icon" />

        <TextView
            android:id="@+id/adminTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Admin"
            android:textColor="#F8F5F5"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/adminIcon"
            app:layout_constraintTop_toTopOf="@id/adminIcon" />

        <TextView
            android:id="@+id/adminDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="Manage Student And Records"
            android:textColor="@color/mutedtext"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/adminTitle"
            app:layout_constraintTop_toBottomOf="@+id/adminTitle" />

        <Button
            android:id="@+id/adminLoginBtn"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/buttonshape"
            android:text="Login"
            android:textColor="@color/allforegroundtext"
            android:textSize="14sp"
            app:backgroundTint="@drawable/buttonsbackgroundcolor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/adminRegisterBtn"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/adminRegisterBtn"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/buttonshape"
            android:text="Register"
            android:textColor="@color/allforegroundtext"
            android:textSize="14sp"
            app:backgroundTint="@color/primarybuttons"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/adminLoginBtn" />
    </androidx.constraintlayout.widget.ConstraintLayout>


<!--    Guard Card -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout6"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttontemplate"
        android:backgroundTint="@color/cardbackground"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminCard">

        <ImageView
            android:id="@+id/guardIcon"
            android:layout_width="30dp"
            android:layout_height="31dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/shield_icon" />

        <TextView
            android:id="@+id/guardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Guard"
            android:textColor="#F8F5F5"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/guardIcon"
            app:layout_constraintTop_toTopOf="@id/guardIcon" />

        <TextView
            android:id="@+id/guardDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="Verify Student Identity"
            android:textColor="@color/mutedtext"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guardTitle"
            app:layout_constraintTop_toBottomOf="@+id/guardTitle" />

        <Button
            android:id="@+id/guardLoginBtn"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/buttonshape"
            android:text="Login"
            android:textColor="@color/allforegroundtext"
            android:textSize="14sp"
            app:backgroundTint="@drawable/buttonsbackgroundcolor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guardRegisterBtn"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/guardRegisterBtn"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/buttonshape"
            android:text="Register"
            android:textColor="@color/allforegroundtext"
            android:textSize="14sp"
            app:backgroundTint="@color/primarybuttons"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guardLoginBtn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="241dp"
        android:layout_height="49dp"
        android:backgroundTint="@color/primarytext"
        android:text="CHOOSE YOUR ROLE"
        android:textColor="@color/primarytext"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/studentCard"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.468" />


</androidx.constraintlayout.widget.ConstraintLayout>